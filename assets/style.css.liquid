* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: "NotoSansJP", "Roboto", "Microsoft Yahei", '宋體', 'simsun', Arial, sans-serif;
}

body.fixed {
    position: fixed;
    width: 100%
}

/*logo area*/
.logo-area {
    padding: 13px 4px;
}

.logo-arae .logo {
    display: block;
    width: 100%;
    max-width: 165px;
    margin: 0 auto;
    text-align: center
}

.wrap-header-nav {
    position: fixed;
    z-index: 10;
    background: #fff;
    height: 100%;
    left: 0;
    top: 0;
    padding: 0 15px;
    max-width: 300px;
    transform: translateX(-100%);
    transition: 0.4s transform;
}

.header.nav-active .wrap-header-nav {
    transform: translateX(0)
}

.header.nav-active .header-nav-overlay {
    display: block
}

.header-nav .nav-item {
    margin-top: 24px;
}

.header-nav .nav-item a {
    font-size: 17px
}

.header-nav-overlay {
    display: none;
    width: 100%;
    height: 100%;
    position: fixed;
    opacity: 0;
    top: 0;
    left: -100%;
    z-index: 9;
    background: rgba(0, 0, 0, .8);
    transition: left 0s 0.4s, opacity 0.4s;
}

header.nav-active .header-nav-overlay {
    opacity: 1;
    left: 0;
    transition: left 0s, opacity 0.4s;
}



.header-hamburger {
    cursor: pointer;
    display: block;
    position: fixed;
    right: 10px;
    top: 14px;
    background: transparent;
    border: 0;
}



.header-hamburger .line {
    width: 32px;
    height: 1px;
    background-color: #000;
    display: block;
    margin: 8px auto;
    -webkit-transition: all 0.3s ease-in-out;
    -o-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
}

.header-hamburger .line:first-child {
    margin-top: 0;
}


/* click */
.header-hamburger.is-active {
    z-index: 11;
}

.header-hamburger.is-active .line {
    background: #fff;
}

.header-hamburger.is-active .line:nth-child(2) {
    opacity: 0;
}

.header-hamburger.is-active .line:nth-child(1) {
    -webkit-transform: translateY(9px) rotate(45deg);
    -ms-transform: translateY(9px) rotate(45deg);
    -o-transform: translateY(9px) rotate(45deg);
    transform: translateY(9px) rotate(45deg);
}

.header-hamburger.is-active .line:nth-child(3) {
    -webkit-transform: translateY(-9px) rotate(-45deg);
    -ms-transform: translateY(-9px) rotate(-45deg);
    -o-transform: translateY(-9px) rotate(-45deg);
    transform: translateY(-9px) rotate(-45deg);
}


