* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body.fixed {
    position: fixed;
    width: 100%
}



/*logo area*/
.logo-area {
    padding: 13px 4px;

    .logo {
        display: block;
        width: 100%;
        text-align: center
    }
}



.wrap-header-nav {
    position: fixed;
    z-index: 10;
    background: #fff;
    height: 100%;
    left: 0;
    top: 0;
    padding: 0 15px;
    max-width: 300px;
    transform:
        translateX(-100%);
    transition: 0.4s transform;


}


.header.nav-active .wrap-header-nav {
    transform: translateX(0)
}

.header.nav-active .header-nav-overlay {
    display: block
}

.header-nav .nav-item {
    margin-top: 24px;

    a {
        font-size: 17px
    }

}

.header-nav-overlay {
    display: none;
    width: 100%;
    height: 100%;
    position: fixed;
    opacity: 0;
    top: 0;
    left: -100%;
    z-index: 9;
    background: rgba(0, 0, 0, .8);
    transition: $fadeoff;


}

header.nav-active {
    .header-nav-overlay {
        opacity: 1;
        left: 0;
        transition: $fadeOn
    }

}

.header-hamburger {
    cursor: pointer;
    width: 32px;
    height: 32px;
    display: block;
    position: fixed;
    right: 0;
    top: 0;
    background: transparent;
    border: 0;

    .hamburger-bar {
        display: block;
        height: 2px;
        background: #000;
        width: 100%;
        border-radius: 2px;

        &+& {
            margin-top: 8px
        }
    }
}