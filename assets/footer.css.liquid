/* reset */

* {
  margin: 0;
  padding: 0;
}

body {
  font-family: "NotoSansJP", "Roboto", "Microsoft Yahei", '宋體', 'simsun',
    Arial, sans-serif;
  background-color: #f6f6f6;
}

ul,
li {
  list-style: none
}

a {
  text-decoration: none;
}

ul li a {
  color: #666;
}

/*// reset */

.footer {
  background: #f5f5f5;
}

.footer .width {
  padding: 0 20px;
}

/* .width { max-width: 1100px; margin: 0 auto; width: 90%; } */

.newsletter-block {}

.list-sub {
  padding-left: 8px;
  margin-bottom: 10px;
}

.list-sub li a {
  font-size: 0.8125rem;
}

.info-block {}

.navigation-block {}

.navigation-block .title,
.newsletter-block .title,
.info-block .title {
  margin-top: 0;
  margin-bottom: 0;
  font-size: 0.9375rem;
  color: inherit;
  color: #666;
}