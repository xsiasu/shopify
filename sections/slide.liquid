{% schema %}
{
  "name": "Swiper Slider",
  "settings": [
    {
      "type": "text",
      "label": "Slider Title",
      "id": "slider_title",
      "default": "Swiper Slider"
    },
    {
      "type": "collection",
      "label": "Slides",
      "id": "slides"
    }
  ]
}
{% endschema %}

<div class="swiper-container">
  <div class="swiper-wrapper">
    {% for slide in section.settings.slides %}
      <div class="swiper-slide">{{ slide.title }}</div>
    {% endfor %}
  </div>
  <div class="swiper-pagination"></div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.swiper-container', {
      // Swiper 옵션 설정
      // 예: 슬라이드를 수직으로 표시하려면 direction: "vertical"
    });
  });
</script>
