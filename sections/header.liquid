<div class="width">
  <div class="logo-area">
    <a href="/" class="logo"
      ><img
        src="{{ section.settings.logo | img_url: 'master' }}"
        alt="{{site.name}}"

        width="165"
    ></a>
  </div>
  <button class="header-hamburger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
  </button>

  <div class="wrap-header-nav">
    <div class="gnb">
      <ul class="header-nav">
        {% for link in section.settings.navigation.links %}
          <li class="nav-item">
            <a class="link" href="{{link.url}}">{{ link.title }}</a>
            {% if link.links != blank %}
              <ul class="header-nav-sub">
                {% for child in link.links %}
                  <li class="nav-item-sub">
                    <a href="{{child.url}}">{{ child.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
<div class="header-nav-overlay"></div>

<script>
  document.querySelector('.header-hamburger').addEventListener('click', () => {
    document.querySelector('.header-hamburger').classList.toggle('is-active');
    document.querySelector('.header').classList.toggle('nav-active');
    document.body.classList.toggle('fixed');
  });
  document.querySelector('.header-nav-overlay').addEventListener('click', () => {
    document.querySelector('.header-hamburger').classList.remove('is-active');
    document.querySelector('.header').classList.remove('nav-active');
    document.body.classList.remove('fixed');
  });
</script>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Header height",
      "default": 24,
      "min": 5,
      "max": 100,
      "step": 1
    },
    {
      "type": "link_list",
      "id": "navigation",
      "label": "Navigation menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
