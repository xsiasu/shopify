<!-- Add init="false" -->

<h1>{{ section.settings.heading }}</h1>
<swiper-container init="false" class="swiper-container-01">
  {% for block in section.blocks %}
    <swiper-slide>
      {% if block.settings.image == blank %} placeholder{% endif %}
      {% if block.settings.image != blank %}
        <a href="">
          <img
            class="slide-image"
            src="{{ block.settings.desktop_image | img_url: 'master' }}"
            alt=""
            width="100%"
          >
        </a>
      {% endif %}
    </swiper-slide>
  {% endfor %}
</swiper-container>

<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"></script>
{% schema %}
{
  "name": "test-slide",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "my custom slider"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "slide",
      "settings": [
        {
          "type": "text",
          "id": "mobile_alt",
          "label": "Mobile Alt"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "text",
          "id": "desktop_alt",
          "label": "Desktop Alt"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "test-slide"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .slide-image {
      /* 이미지에 대한 일반적인 스타일 지정 */
    }

    {% if template contains 'mobile' %}
    @media (max-width: 767px) {
      /* 모바일 장치에 대한 스타일 */
      .slide-image {
        background-color:"red"
        /* 모바일 이미지에 대한 스타일 지정 */
      }
    }
    {% endif %}

    {% if template contains 'desktop' %}
    @media (min-width: 768px) {
      /* 데스크탑 장치에 대한 스타일 */
      .slide-image {
        background-color:"blue"
        /* 데스크탑 이미지에 대한 스타일 지정 */
      }
    }
    {% endif %}
{% endstylesheet %}

{% javascript %}
  const swiperEl1 = document.querySelector('.swiper-container-01');

  // swiper parameters
  const swiperParams1 = {
    slidesPerView: 2,
    breakpoints: {
      640: {
        slidesPerView: 1,
      },
      1024: {
        slidesPerView: 1,
      },
    },
    on: {
      init() {
        // ...
      },
    },
  };

  // now we need to assign all parameters to Swiper element
  Object.assign(swiperEl1, swiperParams1);

  // and now initialize it
  swiperEl1.initialize();
{% endjavascript %}
