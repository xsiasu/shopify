<!-- Add init="false" -->

{% schema %}
{
  "name": "test-slide",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "show_fullscreen",
      "label": "Show full-screen image",
      "info": "If enabled, images will be resized to fit the entire screen.",
      "default": true
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image",
          "info": "1560 x 1050px jpg recommended"
        },
        {
          "type": "text",
          "id": "desktop_alt",
          "label": "Desktop Alt"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image",
          "info": "750 x 1100px jpg recommended. If none is set, desktop image will be cropped."
        },
        {
          "type": "text",
          "id": "mobile_alt",
          "label": "Mobile Alt"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "test-slide",
      "settings": {},
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

